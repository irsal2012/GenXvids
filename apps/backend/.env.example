# Server Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql+asyncpg://genxvids_user:password@localhost:5432/genxvids
DB_HOST=localhost
DB_PORT=5432
DB_NAME=genxvids
DB_USER=genxvids_user
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# File Upload Configuration
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_VIDEO_EXTENSIONS=[".mp4", ".avi", ".mov", ".wmv", ".flv", ".webm"]
ALLOWED_IMAGE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"]
ALLOWED_AUDIO_EXTENSIONS=[".mp3", ".wav", ".aac", ".ogg", ".m4a"]

# FFmpeg Configuration
FFMPEG_PATH=/usr/local/bin/ffmpeg
FFPROBE_PATH=/usr/local/bin/ffprobe

# Video Processing Configuration
MAX_VIDEO_DURATION=600  # 10 minutes in seconds
MAX_VIDEO_RESOLUTION=1920x1080
DEFAULT_VIDEO_QUALITY=medium
VIDEO_BITRATE=2000k
AUDIO_BITRATE=128k

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI/ML Configuration
HUGGINGFACE_TOKEN=
OPENAI_API_KEY=
STABILITY_AI_API_KEY=
MODEL_CACHE_DIR=./models

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@genxvids.com

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=genxvids-storage

# Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_ENABLED=False

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
